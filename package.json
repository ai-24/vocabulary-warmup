{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.3.0",
    "@fortawesome/free-regular-svg-icons": "^6.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/vue-fontawesome": "^3.0.3",
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.2.4",
    "@sipec/vue3-tags-input": "^3.0.4",
    "esbuild": "^0.16.15",
    "vue-i18n": "^9.2.2",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "scripts": {
    "format:prettier": "prettier --write 'app/javascript/**/*.{js,vue}'",
    "check:prettier": "prettier --check 'app/javascript/**/*.{js,vue}'",
    "lint:eslint": "eslint 'app/javascript/**/*.{js,vue}' --max-warnings=0",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^0.8.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.8.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.2",
    "prettier-config-standard": "^5.0.0",
    "tailwindcss": "^3.2.4",
    "vite": "^4.0.0",
    "vite-plugin-full-reload": "^1.0.5",
    "vite-plugin-ruby": "^3.1.2"
  }
}
